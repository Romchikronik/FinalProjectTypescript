{
  "name": "minesweeper",
  "version": "1.0.0",
  "description": "A simple minesweeper project on typescript",
  "private": true,
  "scripts": {
    "test": "jest",
    "dev": "webpack serve --open --mode=development",
    "build": "webpack --mode=production",
    "lint": "eslint ./src/*.ts --no-warn-ignored"
  },
  "keywords": [
    "ts",
    "minesweeper"
  ],
  "author": "Roman Kolesov",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "css-loader": "^6.11.0",
    "eslint": "^9.3.0",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.3",
    "ts-loader": "^9.0.0",
    "typescript": "^5.4.5",
    "typings-for-css-modules-loader": "^0.1.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
